<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/whistletable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/whistle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:src="@drawable/whistle" />
    </TableRow>

    <Button
        android:id="@+id/pause"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="STOP ALL WHISTLES" />

    <Spinner
        android:id="@+id/animalspin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:id="@+id/frequencytable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/belowtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Current Frequency" >
        </TextView>

        <EditText
            android:id="@+id/freqbonus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:numeric="decimal"
            android:text="23000" >
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/frequencytable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="top" >

        <TextView
            android:id="@+id/belowertext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Play Time (seconds)" >
        </TextView>

        <EditText
            android:id="@+id/duration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:numeric="integer"
            android:text="3" >
        </EditText>
    </TableRow>

</LinearLayout>